{
    "name": "nikolaposa/phoundation",
    "description": "Framework-agnostic basis for bootstrapping PHP applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "application",
        "basis",
        "foundation",
        "bootstrap",
        "config",
        "di"
    ],
    "authors": [
        {
            "name": "Nikola Po≈°a",
            "email": "posa.nikola@gmail.com",
            "homepage": "http://www.nikolaposa.in.rs"
        }
    ],
    "require": {
        "php": "^7.0",
        "psr/container": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "zendframework/zend-servicemanager": "^3.0",
        "aura/di": "^3.0",
        "xtreamwayz/pimple-container-interop": "^1.0",
        "filp/whoops": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Phoundation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phoundation\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "zendframework/zend-servicemanager": "^3.0 to use Zend Service Manager for dependency injection",
        "aura/di": "^3.0 to use Aura.Di for dependency injection",
        "xtreamwayz/pimple-container-interop": "^1.0 to use Pimple for dependency injection",
        "filp/whoops": "^2.0 to use the Whoops error handler"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
